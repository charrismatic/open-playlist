{
  "env": "dev",
  "task_dir":"build_tools/tasks",
  "serve": "false",
  "livereload":"true",
  "deploy": {
    "prefix":"public_html/assets/",
    "styles":[
      {
        "source": "*.css",
        "dest" : "css/"
      }
    ],
    "scripts": [
      {
        "source":"*.js",
        "dest" : "js/"
      }
    ],
    "assets": [
      {
        "source":"*",
        "dest":"assets/"
      }
    ],
    "lib": [
      {
        "source":"*",
        "dest":"lib/"
      }
    ]
  },
  "scripts": [
    {
      "name": "functions",
      "path": "source/scripts/main/*.js",
      "maps": false,
      "min": true,
      "dev": true,
      "dev_path": "source/scripts/main/**/*.js",
      "dest": "public_html/js"
    }
  ],
  "styles": [
    {
      "name": "open-playlist",
      "path": "source/styles/open-playlist.scss",
      "sourcemap": true,
      "dev" : true,
      "dev_path": "source/styles/**/*.scss",
      "min" : true,
      "dest": "public/open-playlist"
    }
  ], 
  "libs": [
    {
      "path":"node_modules/jquery/dist/jquery.min.js",
      "dest":"dist/lib"
    },
    {
      "path": "'material-design-lite':'src/**/*.{scss,js}",
      "dest": "test/lib"
    },
    {
      "path": "vendor/assets/stylesheets/animate/*.scss",
      "dest": "test/lib"
    }
  ],
  "fonts": [
    {
      "path":"font-awesome/*",
      "dest":"dist/fonts"
    },
    {
      "path":"lib/glyphicons/*",
      "dest":"dist/fonts"
    }
  ],
  "images": [
    {
      "src":"source/images/*",
      "dest":"dist/images"
    }
  ],
  "documentation":
    {
    "styles": {
      "src": "tests/dist/css/test.css",
      "dest": "docs/styles/stylestats.json"
    },
    "todo": {
      "format": "md",
      "filelist": [
        "source/"
      ]
    }
  },
  "tests": {
    "script": {
      "name": "test",
      "dest": "tests/dest/js/",
      "min": false,
      "sourcemap": true,
      "path": "tests/source/scripts/**/*.js"
    },
    "stylesheet":{
      "name": "test",
      "path": "tests/source/styles/test.scss",
      "sourcemap": true,
      "min" : true,
      "dest": "tests/dist/css"
    },
    "handle_error": {
      "name": "test",
      "path": "tests/source/styles/test_error.scss",
      "dest": "tests/dist/css"
    }
  }
}
